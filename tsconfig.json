{
  "exclude": ["dist/**/*", "node_modules/**/*", "**/*.d.ts"],
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": ["**/*.js", "**/*.cjs", "**/*.mjs", "**/*.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "useUnknownInCatchVariables": false
  }
}
